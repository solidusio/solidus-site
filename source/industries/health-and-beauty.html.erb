      <div class="carousel-content">
        <div class="main-image-container">
          <img src="<%= image_path("use-cases/quote-goby@1x.jpg") %>" data-srcset="<%= image_path("use-cases/quote-goby@2x.jpg") %> 2x, <%= image_path("use-cases/quote-goby@1x.jpg") %> 1x" class="img-fluid" width="100%" alt="Goby" />
        </div>
        <div class="blockquote-container">
          <blockquote class="blockquote goby d-flex flex-column justify-content-between">
            <a class="logo" href="https://goby.co" target="_blank"><%= inline_svg("community-logos/goby.svg", class: "isvg") %></a>
            <div>
              <%= inline_svg("icons/quote.svg", class: "quote") %>
