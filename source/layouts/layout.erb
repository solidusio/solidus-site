<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= current_page.data.title || "Solidus, Rails e-Commerce Solution" %></title>

    <link href="//fonts.googleapis.com/css?family=PT+Sans:400,700" rel="stylesheet" type="text/css">

    <%= stylesheet_link_tag "solidus" %>

    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="alternate" href="/feed.xml" type="application/atom+xml" title="Solidus Blog">

  </head>

  <body class="<%= page_classes %>">
    <%= partial "header" %>

    <div class="main-content" role="main">
      <%= yield %>
    </div>

    <%= partial "footer" %>

    <%= javascript_include_tag "solidus" %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-97398167-1', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
