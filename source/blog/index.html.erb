---
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>
  <article>
  <h2><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <%= article.body %>
  </article>
<% end %>

<% if paginate && num_pages > 1 %>
  <ul class="pagination">
    <li class="button button-small button-outline <%= prev_page ? "" : "disabled" %>">
      <% if prev_page %>
        <%= link_to "Older Posts", prev_page %>
      <% else %>
        Older Posts
      <% end %>
    </li>
    <li class="button button-small button-outline <%= next_page ? "" : "disabled" %>">
      <% if next_page %>
        <%= link_to "Newer Posts", next_page %>
      <% else %>
        Newer Posts
      <% end %>
    </li>
  </ul>
<% end %>
